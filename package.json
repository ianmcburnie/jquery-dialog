{
  "name": "jquery-dialog",
  "description": "jQuery plugin that creates the basic interactivity for an ARIA dialog widget.",
  "version": "0.3.0",
  "scripts": {
    "start": "npm run lasso && parallelshell 'npm run server' 'npm run watch'",
    "prepublish": "npm run clean && npm run lint && npm run build",
    "build": "npm run clean && npm run minify && npm run lasso",
    "clean": "rimraf lint.txt .cache build docs/browser.js.*",
    "fix": "eslint jquery.dialog.js --fix",
    "lasso": "lasso browser.json --output-dir docs --minify",
    "lint": "eslint jquery.dialog.js > lint.txt",
    "minify": "jsmin -o jquery.dialog.min.js jquery.dialog.js",
    "server": "browser-sync start -s --ss docs --index docs/index.html --files docs",
    "watch": "onchange jquery.dialog.js -- npm run lasso"
  },
  "pre-commit": "prepublish",
  "author": "Ian McBurnie <ianmcburnie@hotmail.com>",
  "homepage": "https://github.com/ianmcburnie/jquery-dialog",
  "bugs": {
    "url": "https://github.com/ianmcburnie/jquery-dialog/issues"
  },
  "keywords": [
    "jquery-plugin",
    "ecosystem:jquery",
    "accessibility",
    "a11y",
    "wai-aria",
    "dialog"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ianmcburnie/jquery-dialog.git"
  },
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2",
    "eslint": "^3",
    "eslint-config-google": "~0.6",
    "jquery": ">=1.11",
    "jquery-common-keydown": "~0.3",
    "jquery-focusable": "~0.3",
    "jquery-keyboard-trap": "~0.4",
    "jquery-migrate": "^3",
    "jquery-next-id": "~0.1",
    "jquery-screenreader-trap": "~0.3",
    "jsmin": "^1",
    "lasso-cli": "^2",
    "onchange": "^3",
    "parallelshell": "^2",
    "pre-commit": "^1",
    "rimraf": "^2"
  },
  "peerDependencies": {
    "jquery": ">=1.11",
    "jquery-next-id": "~0.1",
    "jquery-common-keydown": "~0.3",
    "jquery-focusable": "~0.3",
    "jquery-keyboard-trap": "~0.4",
    "jquery-screenreader-trap": "~0.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
